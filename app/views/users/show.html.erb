<div class="small-container">

	<% if notice != nil %>
		<br>
		<div class="alert alert-info" id="notice" role="alert"><%= notice %></div>
	<% end %>

  <div class="page-header">
    <h1>User Profile</h1>
  </div> <!-- end page header -->

	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">First Name</h3>
	  </div>
	  <div class="panel-body">
	    <%= @user.first_name %>
	  </div>
	</div>

	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Last Name</h3>
	  </div>
	  <div class="panel-body">
	    <%= @user.last_name %>
	  </div>
	</div>

  <br>
  <hr>
  
  <div class="center-content">
		<%= link_to 'Edit', edit_user_path(@user) %> | <%= link_to 'Back', :back %>
  </div>

</div> <!-- end small-container -->

<br>