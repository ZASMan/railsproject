<div class="small-container">
	<div class="page-header">
	  <h1>Contact</h1>
	</div>

  <% if flash[:notice] %>
    <br>
    <div class="alert alert-info" id="notice" role="alert"><%= flash[:notice] %></div>
  <% end %>

	<%= form_tag("/message_sent") do %>
    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
    </div>      
    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :message %>
      <%= text_area_tag :message, nil, class: "form-control no-resize", rows:"6", placeholder: "Enter Message" %>
    </div>

	  <div class="center-content">
	    <%= submit_tag "Send", class: "btn btn-primary" %>   
	  </div>
	<% end %>

  <br>
  <hr>

	<div class="center-content">
		<%= link_to 'Back', :back  %>
	</div>
</div> <!-- end small-container -->

<br>
