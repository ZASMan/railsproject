<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1 class="products-title">Products</h1>
  <div class="new-product-btn">
    <%= link_to 'New Product' , new_product_path , class: "btn btn-primary" %>
  </div>
  <div class="clearfix"></div>
</div> <!-- end page header -->

<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="thumbnail">
        <% if product.image_url != "" %>
          <%= image_tag product.image_url, class: "img-responsive img-centered grey-border thumbnail-img" %>
        <% else %>
          <div class="no-image img-centered grey-border thumbnail-img">
            <span class="glyphicon glyphicon-picture" aria-hidden="true"></span>
          </div>
        <% end %> <!-- end of image conditional statement -->
        <div class="caption">
          <h3>
            <%= product.name %><br>
            <small><%= product.sport %></small>
          </h3>
          <h4 class="product-price"><%= number_to_currency(product.price, format: "%u %n") %></h4>
          <br>
          <p class="justified"><%= product.description %></p>
        </div> <!-- end caption -->

        <div class="thumbnail-footer">
          <%= link_to 'Show', product %> | 
          <%= link_to 'Edit', edit_product_path(product) %> | 
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div> <!-- end thumbnail footer -->
      </div> <!-- end thumbnail -->
    </div> <!-- end column -->
  <% end %> <!-- end products loop -->
</div> <!-- end row -->
