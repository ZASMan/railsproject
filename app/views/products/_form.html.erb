<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sport %>
    <%= f.text_field :sport, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control no-resize", rows: "2" %>
  </div>

  <div class="form-group">
    <%= f.label :detailed_description %>
    <%= f.text_area :detailed_description, class: "form-control no-resize", rows: "6" %>
  </div>

  <div class="form-group">
    <%= f.label :image_url, "Image URL" %>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>

  <br>

  <div class="center-content">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
